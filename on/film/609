    <h3 data-bind="visible: selectedVisibleseason()">Part of the <a href="/on/season/66" class="season" itemprop="superEvent" itemscope itemtype="http://schema.org/Event" data-bind="attr:{href:selectedLinkseason},text:selectedLabelseason">Spanish Film Season</a></h3>

    

    <h3><time class="startDateTime" itemprop="startDate" datetime="2010-04-29 19:30:00+01:00" data-bind="attr:{datetime:startDateTime()},text:displayStart()">7:30 p.m. Thursday 29 April 2010</time></h3>

    <div itemscope itemtype="http://schema.org/Movie">
        <meta itemprop="name" content="Toreomolinos 73" data-bind="attr:{content:title}">
        <meta itemprop="copyrightyear" content="2003" data-bind="attr:{content:year}">
