    <h3 data-bind="visible: selectedVisibleseason()">Part of the <a href="/on/season/144" class="season" itemprop="superEvent" itemscope itemtype="http://schema.org/Event" data-bind="attr:{href:selectedLinkseason},text:selectedLabelseason">Holocaust Film Season</a></h3>

    

    <h3><time class="startDateTime" itemprop="startDate" datetime="2013-02-20 19:30:00+00:00" data-bind="attr:{datetime:startDateTime()},text:displayStart()">7:30 p.m. Wednesday 20 February 2013</time></h3>

    <div itemscope itemtype="http://schema.org/Movie">
        <meta itemprop="name" content="Amen (2002) + Introduction" data-bind="attr:{content:title}">
        <meta itemprop="copyrightyear" content="" data-bind="attr:{content:year}">
        <meta itemprop="image" content="
                /media/cache/46/5f/465f6244941e3803aaa0660ce3abc622.jpg">
        <table class="table table-condensed event-table">
            <tbody>
