    <meta itemprop="description" content="The Oberhausen Film Festival in Germany is one of the best Short film festivals in the world, and we're very excited to be hosting 6 screenings of some of their best films." data-bind="attr: { content: summary }"/>
    <meta itemprop="url" content="/on/season/151"/>
